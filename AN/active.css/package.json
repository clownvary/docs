{
  "name": "active.css",
  "version": "0.9.3",
  "description": "This is a style library for the product styleguide for AUI.",
  "main": "less/index.less",
  "style": "dist/css/active.css",
  "files": [
    "less",
    "fonts",
    "dist"
  ],
  "repository": "https://gitlab.dev.activenetwork.com/kzhang/active.css",
  "scripts": {
    "build": "npm run copyFont && npm run build:css",
    "prebuild": "npx rimraf dist && mkdir dist",
    "copyFont": "cp -r fonts/ dist/fonts/",
    "build:css": "lessc less/index.less --include-path=less | postcss -c postcss.config.js -o dist/css/active.css",
    "build:icon": "node scripts/icon/index.js",
    "watch": "watch 'npm run build && npm run docs' less",
    "watch:docs": "watch 'npm run docs' docs",
    "reporter": "npm run build && css-reporter dist/css/active.css",
    "test": "npm run build",
    "docs": "lessc docs/docs.less --include-path=less | postcss -c postcss.config.js -o docs/docs.css",
    "release": "better-npm-run release:nexus",
    "release:ci": "better-npm-run release:nexus:ci",
    "deploy": "npm run docs && jekyll b && rsync -avzI -e ssh _site root@10.119.128.53:/usr/share/nginx && ssh root@10.119.128.53 'service nginx restart'",
    "lint": "stylelint less/*.less less/**/*.less --fix -r",
    "prepush": "npm run lint"
  },
  "betterScripts": {
    "release:nexus": {
      "command": "node scripts/release",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "active.css:*"
      }
    },
    "release:nexus:ci": {
      "command": "node scripts/release",
      "env": {
        "NODE_ENV": "production",
        "CI_ENV": "JENKINS",
        "DEBUG": "active.css:*"
      }
    }
  },
  "author": "ACTIVE China FEE",
  "license": "MIT",
  "devDependencies": {
    "archiver": "1.1.0",
    "better-npm-run": "0.0.11",
    "child-process-promise": "2.1.3",
    "colors": "1.1.2",
    "css-reporter": "0.0.6",
    "csscomb": "^4.2.0",
    "cssnano": "3.7.3",
    "debug": "2.2.0",
    "glob": "^7.1.2",
    "husky": "0.14.3",
    "jszip": "3.1.2",
    "less": "2.7.1",
    "nexus-deployer": "0.1.8",
    "normalize.css": "5.0.0",
    "postcss-cli": "4.0.0",
    "postcss-custom-media": "6.0.0",
    "postcss-reporter": "3.0.0",
    "readline-sync": "1.4.5",
    "rimraf": "2.5.4",
    "stylelint": "8.0.0",
    "stylelint-config-standard": "17.0.0",
    "ttf2woff2": "2.0.3",
    "watch": "0.19.1"
  },
  "engines": {
    "node": ">=6.6.0"
  }
}
