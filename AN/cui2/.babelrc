{
  "presets": ["react", "es2015", "stage-1"],

  "plugins": [
    "transform-runtime",
    "add-module-exports"
  ],

  "env": {
    "static": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    },
    "development": {
      "plugins": [
        ["react-transform", {
            "transforms": [{
                "transform": "react-transform-catch-errors",
                "imports": ["react", "redbox-react"]
              }
            ]
        }]
      ]
    },
     "test": {
      "plugins": [
        ["istanbul"]
       ]
    }
  }
}
