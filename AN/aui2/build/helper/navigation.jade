doctype html

- var opts = htmlWebpackPlugin.options;

html(lang="en")

  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1")
    title

  body
    dl
      dt Module pages:
        each val, index in opts.MODULESMAP
          if val.config.isModule&&!val.config.isExample
            dd
              a(href="http://"+opts.host+":"+opts.port+"/"+val.name+".html")=val.pathName

      dl
        dt Example pages:
          each val, index in opts.MODULESMAP
            if val.config.isExample
              dd
                a(href="http://"+opts.host+":"+opts.port+"/"+val.name+".html")=val.pathName
